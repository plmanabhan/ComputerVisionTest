# FaceRedraw.py

def redraw_face(image_path):
  
  try:
    img = Image.open(image_path)
  except Exception as e:
    print("Uh oh! There may be a problem with your image. Error:", e)
    return None

  img = img.filter(ImageFilter.BLUR)
  
  try:
    img.save("new_" + image_path)
    print("Your face has been... redrawn? Check new_" + image_path)
  except Exception as e:
    print("Oops! We might have made things worse. Error:", e)

image_to_redo = input("Enter the path to your image (beware!): ")
redraw_face(image_to_redo)
